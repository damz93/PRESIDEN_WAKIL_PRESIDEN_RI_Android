<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#870808" />
            <corners android:radius="0dp" />
            <stroke android:width="2dp" android:color="#870808" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:angle="90" android:endColor="#f10000" android:startColor="#f10000" />
            <stroke android:width="2dp" android:color="#f10000" />
            <!--  -->
            <corners android:radius="0dp" />
            <padding android:bottom="0dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
    </item>
</selector>